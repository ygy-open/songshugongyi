<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/progress_item_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_progress_item_name"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/progress_item_name"
        android:textSize="25sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_progress_item_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:textColor="@color/progress_item_introduction"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_progress_item_other"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:gravity="right"
        android:textColor="@color/word_color"
        android:textSize="15sp"
        android:layout_height="30dp" />

</LinearLayout>
