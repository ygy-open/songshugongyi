<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color_tab"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="行走的公益猪"
                          />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="left">
         <TextView
             android:layout_marginTop="5dp"
             android:id="@+id/user_id"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Jjdjfijijdjf"
             android:textColor="@color/white"
             android:layout_weight="1"/>
     </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="right"
         android:layout_weight="1">

         <Button
             android:id="@+id/btn_to_userinfo"
             android:layout_width="wrap_content"
             android:layout_height="40dp"
             android:drawablePadding="5dp"
             android:onClick="toRegister"
             android:gravity="center|center_vertical"
             android:text="@string/userinfo"
             android:background="@null"
             android:textColor="@color/white"
             android:textSize="16sp" />
     </LinearLayout>


 </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white">
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注:"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/user_attention"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="被关注:"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/user_be_attention"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textColor="@color/white"/>
                        </LinearLayout>

   </LinearLayout>

         </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_tab"
    android:layout_marginTop="2dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.songshugongyi.songshugongyi.user.userEdit
            android:id="@+id/user_news"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </com.songshugongyi.songshugongyi.user.userEdit>

        <com.songshugongyi.songshugongyi.user.userEdit
            android:id="@+id/user_likes"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </com.songshugongyi.songshugongyi.user.userEdit>

        <com.songshugongyi.songshugongyi.user.userEdit
            android:id="@+id/user_joins"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </com.songshugongyi.songshugongyi.user.userEdit>



        <com.songshugongyi.songshugongyi.user.userEdit
            android:id="@+id/user_feedback"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        </com.songshugongyi.songshugongyi.user.userEdit>
        <com.songshugongyi.songshugongyi.user.userEdit
            android:id="@+id/about_us"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        </com.songshugongyi.songshugongyi.user.userEdit>


    </LinearLayout>

</LinearLayout>

    </LinearLayout>

