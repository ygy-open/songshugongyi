<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/btn_join"
                android:layout_alignBottom="@+id/btn_join"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_arrow_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/fragment_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btn_join"
                android:layout_alignBottom="@+id/btn_join"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/str_userinfo"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:gravity="center"
                android:text="@string/join"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <com.songshugongyi.songshugongyi.widget.CustomViewPager
        android:id="@+id/vp_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </com.songshugongyi.songshugongyi.widget.CustomViewPager>

</LinearLayout>