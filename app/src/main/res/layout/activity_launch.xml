<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_tab"
    android:layout_height="match_parent">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/launch"/>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="71dp"
            android:layout_height="67dp"
            android:background="@mipmap/app_icon" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/menu_item_background"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/descripe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/launch_description"
            android:textColor="@color/menu_item_background" />
</LinearLayout>
    </LinearLayout>

</LinearLayout>